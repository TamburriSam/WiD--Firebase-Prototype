  let splitArr = arr.split(" ");
  let nodupeSplit = [...new Set(splitArr)];
  console.log(splitArr);

  console.log(`original length`, splitArr.length);
  console.log(`new length`, nodupeSplit.length);

  let filteredOut = splitArr.filter((item, pos) => {
    return splitArr.indexOf(item) === pos;
  });

  let finalVersion = filteredOut.map((word) => {
    let firstLetter = word.substr(0, 1).toLowerCase();
    let lastPart = word.substr(1);

    let newFormedWord = firstLetter + lastPart;

    return newFormedWord;
  });

  console.log(finalVersion);

  db.collection("words").doc("words").update({
    words: finalVersion,
  });